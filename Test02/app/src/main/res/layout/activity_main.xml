                                android:textAlignment="center" />

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="91dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/textview_border"
                                android:text="地点纬度"
                                android:textAlignment="center" />

                        </TableRow>

                    </TableLayout>

                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

